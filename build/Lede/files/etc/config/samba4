
config samba
	option workgroup 'WORKGROUP'
	option charset 'UTF-8'
	option description 'Samba on OpenWRT'
	option name 'FlyStation'
	option homes '0'
	option macos '1'

config sambashare
	option auto '1'
	option path '/mnt/sda3'
	option read_only 'no'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sda3'
	option inherit_owner 'yes'
	option name 'Ssd'
	option users 'root'
	option browseable 'no'

config sambashare
	option auto '1'
	option read_only 'no'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sda1'
	option users 'root'
	option name 'HDD'
	option path '/mnt/sdb1'
	option inherit_owner 'yes'

config sambashare
	option auto '1'
	option name 'sda1'
	option path '/mnt/sda1'
	option read_only 'no'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sda1'
	option inherit_owner 'yes'
	option browseable 'no'
	option users 'root'

